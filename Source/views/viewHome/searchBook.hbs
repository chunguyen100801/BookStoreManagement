

      <div id="search">
        <i class="material-icons">search</i>
        <!-- <input id="myInput" class="form-control " type="search" placeholder="Nhập thông tin cần tìm" aria-label="Search"> -->
        <input type="text" id="myInput" onkeyup="myFunction()" placeholder="Nhập thông tin tìm kiếm" title="Type in a name">
        <button class="btn btn-outline-dark my-0 my-sm-0" type="submit">Tìm</button>
      </div>
      
      <div id="container" style="margin-left:-80px; ">
        <div id="main" style="width:1500px; margin:auto">
            
            <hr id="hr2">  
            <div class="infor" id="infor" >
                <form action=""  class="form" id="form-1">
                    <table class="table table-bordered table-light" id="myTable" >
                        <thead>
                          <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Tên sách</th>
                            <th scope="col">Tác giả</th>
                            <th scope="col">Thể loại</th>
                            <th scope="col">Giá</th>
                            <th scope="col">Số lượng</th>
                          </tr>
                        </thead>
                        <tbody >
                          {{#each books}}
                          <tr>
                            <th>{{idBook}}</th>
                            <td>{{BookName}}</td>
                            <td>{{Author}}</td>
                            <td>{{Topic}}</td>
                            <td>{{Price}}</td>
                            <td>{{Quantity}}</td>
                          </tr>

                          {{/each }}
                
                        </tbody>
                      </table>
                    
                </form>
            </div>
        </div>    
       
    </div>

